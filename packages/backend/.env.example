# ==============================
# Application Configuration
# ==============================
NODE_ENV=development
PORT=3000

# ==============================
# Database (Supabase PostgreSQL)
# ==============================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# ==============================
# JWT Configuration
# ==============================
# Access Token (short-lived - 15 minutes)
JWT_ACCESS_SECRET=your-super-secure-access-token-secret-min-32-chars
JWT_ACCESS_EXPIRES_IN=900 # In second

# Refresh Token (long-lived - 7 days)
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-min-32-chars
JWT_REFRESH_EXPIRES_IN=604800 # In second

# ==============================
# API Configuration
# ==============================
API_VERSION=v1

# ==============================
# CORS Configuration
# ==============================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000
